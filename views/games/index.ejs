
<%- include ../partials/header.ejs %>

  <div id="title">
    <h3>All of My Games</h3>
  </div>

  <% games.forEach(function(game, id) { console.log(id) %>
    <% if (id % 2 === 0 || id === 0) { %>
      <div class="row">
    <% } %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <a href="/games/<%= game.name %>">
            <div class="card-content white-text">
              <span class="card-title"><%= game.name %></span>
              <p><%= game.description %></p>
            </div>
          </a>
          <div class="card-action">
            <a href="/games/<%= game.name %>/edit" class="waves-effect waves-light green accent-3 btn" >Edit Game</a>
            <a href="/games/<%= game.name %>" class="waves-effect waves-light green accent-3 btn delete-game">Delete Game</a>
          </div>
        </div>
      </div>
    <% if (id % 2 !== 0) { %>
      </div>
      <span class="this thing"></span>
    <% } %>
  <% }); %>


<%- include ../partials/footer.ejs %>
